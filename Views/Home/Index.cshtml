@{
    ViewData["Title"] = "Home Page";
}
@model Restauranter.Models.RReview;

<h1>Write a new Review</h1>
<form asp-controller="Home" asp-action="Process" method="POST" class="form-group">
    <div class="row">
        <div class="col-md-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="Stars"></label>
            <select asp-for="Stars" class="form-control">
                <option name="1">1</option>
                <option name="2">2</option>
                <option name="3">3</option>
                <option name="4">4</option>
                <option name="5">5</option>
            </select>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-5">
            <label asp-for="RestaurantName"></label>
            <input asp-for="RestaurantName" class="form-control">
            <span asp-validation-for="RestaurantName"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <label asp-for="Review"></label>
            <textarea asp-for="Review" class="form-control"></textarea>
            <span asp-validation-for="Review"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <label asp-for="VisitedDate"></label>
            <input type="date" asp-for="VisitedDate" class="form-control">
            <span asp-validation-for="VisitedDate"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-info">Submit</button>

</form>